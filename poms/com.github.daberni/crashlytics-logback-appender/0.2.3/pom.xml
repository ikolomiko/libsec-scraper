  <modelVersion>4.0.0</modelVersion>
  <groupId>com.github.daberni</groupId>
  <artifactId>crashlytics-logback-appender</artifactId>
  <version>0.2.3</version>
  <packaging>aar</packaging>
  <name>Crashlytics Logback Appender</name>
  <description>Simple logback appender to log to Crashlytics for enhanced crash reports Edit</description>
  <url>https://github.com/daberni/crashlytics-logback-apender</url>
  <inceptionYear>2017</inceptionYear>
  <licenses>
    <license>
      <name>The Apache Software License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <developers>
    <developer>
      <id>daberni</id>
      <name>Bernhard Danecker</name>
      <email>bernhard.danecker@gmail.com</email>
    </developer>
  </developers>
  <scm>
    <connection>scm:git@github.com:daberni/crashlytics-logback-apender.git</connection>
    <url>https://github.com/daberni/crashlytics-logback-apender</url>
  </scm>
  <dependencies>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
      <version>1.7.25</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>com.github.tony19</groupId>
      <artifactId>logback-android-classic</artifactId>
      <version>1.1.1-6</version>
      <scope>compile</scope>
      <exclusions>
        <exclusion>
          <artifactId>android</artifactId>
          <groupId>com.google.android</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>com.crashlytics.sdk.android</groupId>
      <artifactId>crashlytics</artifactId>
      <version>2.7.0</version>
      <type>aar</type>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.12</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
